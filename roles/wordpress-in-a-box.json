{
  "name": "wordpress-in-a-box",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "description": "A all-in-one webserver customised for hosting wordpress",
  "run_list": [
    "recipe[nginx::install_from_package]",
    "recipe[mysql]",
    "recipe[php5::default]",
    "recipe[php5::fpm]",
    "recipe[php5::fpmenable_nginx]",
    "recipe[rsync]"
  ],
  "override_attributes": {
  },
  "default_attributes": {
    "php5_fpm" : {
       "tunable" : {
          "max_children": 2
        } 
    }
  }
}
